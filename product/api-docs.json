{
  "openapi": "3.0.1",
  "info": {
    "title": "Products/Ecomm API Restful ",
    "description": "API Restful responssável por criação e manipulação de Produtos do Ecomm",
    "contact":{
      "email": "products@ecomm.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
        "url": "http://localhost:3000",
        "description": "Server I"
    }
   ],
   "paths": {
       "/product": {
            "summary": "Rota para criar produto",
            "description": "Cria um produto com os dados fornecidos pelo cliente",
            "post": {
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProductData"
                            }
                        }
                    }
                },            
               "responses": {
                   "201": {
                       "description": "Produto criado com sucesso",
                       "content": {
                           "application/json": {
                               "schema": {
                                   "type": "object",
                                   "properties": {
                                       "usuarioId": { "type": "string" },
                                       "createdData":{ "type": "string" },
                                       "id": { "type": "string" },
                                       "nome": { "type": "string" },
                                       "descricao": { "type": "string" },
                                       "categoria": { "type": "string" },
                                       "quantidade": { "type": "integer" },
                                       "valor": { "type": "number" },
                                       "caracteristicas": { 
                                           "type": "array",
                                           "items": {
                                               "properties": {
                                                   "nome": { "type": "string" },
                                                   "descrição": { "type": "string" }
                                                }
                                            }
                                        },
                                        "imagens": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "url": { "type": "string" },
                                                    "descricao": { "type": "string" } 
                                                }
                                            }
                                        }
                                    }
                                       
                               }
                            }
                        }
                    }
                }
            }
        }
    },
   "components": {
      "schemas": {
        "ImageData": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "descricao": {
                    "type": "string"
                }
            }
        },
        "caracteristicaData": {
            "type": "object",
            "properties": {
                "nome": {
                    "type": "string"
                },
                "descricao": {
                    "type": "string"
                }
            }
        },
        "ProductData": {
            "type": "object",
            "properties": {
                "usuarioId": { "type": "string" },
                "createdData":{ "type": "string" },
                "id": { "type": "string" },
                "nome": { "type": "string" },
                "descricao": { "type": "string" },
                "categoria": { "type": "string" },
                "quantidade": { "type": "integer" },
                "valor": { "type": "number" },
                "caracteristicas": { 
                    "type": "array",
                    "items": {
                        "$ref": "#/components/schemas/caracteristicaData" 
                     }
                 },
                 "imagens": {
                    "type": "array",
                    "items": {
                       "$ref": "#/components/schemas/ImageData"
                    }
                 }
            }
        }

      }

    }
}
 